<Window x:Class="Subtitle_Displayer_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Subtitle_Displayer_Project"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*">
            </RowDefinition>
            <RowDefinition Height="*">
            </RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="SubtitlePathButton" Click="GetFilePath" HorizontalAlignment="Center" VerticalAlignment="top" Grid.Row="0">File</Button>
        <MediaElement x:Name="VideoME" HorizontalAlignment="Center" VerticalAlignment="Bottom" Source="" LoadedBehavior="Manual" Grid.Row="0"></MediaElement>
        <TextBlock x:Name="SubtitleTB" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="1"></TextBlock>
    </Grid>
</Window>
